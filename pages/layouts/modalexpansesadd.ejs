<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <title>Document</title>
  </head>
  <body>
    <form action="/transaction/v1/expenses" method="POST">
      <div class="modal fade" id="expansesadd" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Add Transaction Expenses</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div class="form-floating">
                <!-- Category Expense Dropdown -->
                <select class="form-select" aria-label="Category Expense" name="expanses_id" required>
                  <option value="" selected disabled>Select Category Expense</option>
                  <% expanse.forEach(function(expanse){ %>
                    <option value="<%= expanse.id %>"><%= expanse.category %></option>
                  <% }); %>
                </select>
                <label for="expanses_id">Category Expense</label>
              </div>
              <!-- Amount Input -->
              <div class="form-floating mt-3">
                <input type="number" class="form-control" id="floatingAmount" placeholder="Amount Transaction" name="amount" required>
                <label for="amount">Amount Transaction</label>
              </div>
              <!-- Wallet Dropdown -->
              <div class="form-floating mt-3">
                <select class="form-select" aria-label="Wallet" name="wallet_id" required>
                  <option value="" selected disabled>Select Wallet</option>
                  <% getWalletByUserId.forEach(function(getWalletByUserId){ %>
                    <option value="<%= getWalletByUserId.id %>"><%= getWalletByUserId.category %></option>
                  <% }); %>
                </select>
                <label for="wallet_id">Wallet</label>
              </div>
              <!-- Date Input -->
              <div class="form-floating mt-3">
                <input type="date" class="form-control" id="date_transaction" name="date_transaction" required>
                <label for="date_transaction">Date Transaction</label>
              </div>
              <!-- Description Input -->
              <div class="form-floating mt-3">
                <input type="text" class="form-control" id="description" placeholder="Description" name="description">
                <label for="description">Description</label>
              </div>
            </div>
            <div id='message' class="alert mt-2" style="display: none"></div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>
        </div>
      </div>
    </form>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <script src="/js/modalexpanses.js"></script>
  </body>
</html>
