<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous" />
  <link rel="stylesheet" href="/css/style.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />


  <title>Dashboard</title>
</head>

<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('layouts/navbar'); %>
      <div class="px-0">
        <%- include('layouts/sidebar'); %></div>
    </div>
    <div class="main">
      <div class="container mt-4">
        <div class="row">
          <!-- Monthly Income Card -->
          <div class="col-sm-6">
            <div class="card mb-3">
              <div class="card-body d-flex justify-content-between px-2 mt-2">
                <h5 class="card-title">Monthly Income</h5>
                <p class="card-text">8,000,000</p>
                <i class="fas fa-money-check-alt"></i>
              </div>
            </div>
          </div>

          <!-- Monthly Expense Card -->
          <div class="col-sm-6">
            <div class="card  mb-3">
              <div class="card-body d-flex justify-content-between px-2 mt-2">
                <h5 class="card-title">Monthly Expense</h5>
                <p class="card-text">5,000,000</p>
                <i class="fas fa-wallet"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="container-fluid row">

        <div class="col mt-1">
          <div class="row-sm-6">
            <div class="card row-sm-6">
              <h2>Income Monthly</h2>
              <!-- Insert your line graph here -->
              <canvas id="incomeChart"></canvas>
            </div>
            <div class="card row-sm-6 mt-2">
              <h2>Expenses Monthly</h2>
              <!-- Insert your bar graph here -->
              <canvas id="expensesChart"></canvas>
            </div>
            <div class="card row-sm-6 mt-2">
              <h2>Recent Expenses</h2>
              <!-- Insert your table here -->
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Category</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>2023-09-16</td>
                    <td>Food</td>
                    <td>$10</td>
                    <td><button class="btn btn-primary">Edit</button>
                      <button class="btn btn-primary">Delete</button>
                    </td>
                  </tr>
                  <tr>
                    <td>2023-09-16</td>
                    <td>Food</td>
                    <td>$10</td>
                    <td><button class="btn btn-primary">Edit</button>
                      <button class="btn btn-primary">Delete</button>
                    </td>

                  </tr>
                  <!-- Add more rows as needed -->
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="card col-sm-4 mt-1">
          <div class="col-sm-6 w-100">
            <h2>MTD Expenses by Category</h2>
            <!-- Insert your pie chart here -->
            <canvas id="expensesByCategoryBarChart"></canvas>
          </div>
          <div class="col-sm-6 mt-5 w-75">
            <h2>MTD Expenses by Category</h2>
            <!-- Insert your pie chart here -->
            <canvas id="expensesByCategoryChart"></canvas>
          </div>
        </div>
      </div>

    </div>
    <%- include('layouts/modalToAddWalletFirst'); %>
   
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script src="/dashboardchart.js"></script>
    <script>
      // JavaScript to display the modal
      $(document).ready(function () {
        $("#walletModal").modal("show");
      });
    </script>
</body>

</html>